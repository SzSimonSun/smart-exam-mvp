# Smart Exam System - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://exam:exam@localhost:5433/examdb
DB_HOST=localhost
DB_PORT=5433
DB_NAME=examdb
DB_USER=exam
DB_PASSWORD=exam

# Redis Configuration
REDIS_URL=redis://localhost:6380/0
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_DB=0

# RabbitMQ Configuration
RABBIT_URL=amqp://guest:guest@localhost:5672//
RABBIT_HOST=localhost
RABBIT_PORT=5672
RABBIT_USER=guest
RABBIT_PASSWORD=guest

# MinIO/S3 Configuration
MINIO_ENDPOINT=http://localhost:9010
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123
MINIO_BUCKET_NAME=smart-exam
MINIO_SECURE=false

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# OCR/OMR Configuration
TESSERACT_CMD=/usr/bin/tesseract
OCR_CONFIDENCE_THRESHOLD=0.75
OMR_CONFIDENCE_THRESHOLD=0.8

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,tiff

# Workers Configuration
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1
WORKER_CONCURRENCY=4